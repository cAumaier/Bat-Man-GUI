<Page x:Class="BAT_Man.Pages.BetriebAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BAT_Man.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BAT-Man">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="1" Grid.Row="1" CornerRadius="8" BorderThickness="1.5" 
                BorderBrush="{StaticResource ButtonBrush}" Background="Transparent" Margin="5">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="0"           
                                Color="#4AC0E8"            
                                BlurRadius="5"             
                                Opacity="0.8"/>
            </Border.Effect>

            <TextBox x:Name="txtBox_Betrieb_Name" Text="Name des Betriebs" 
                     BorderThickness="0" Background="Transparent" Foreground="{StaticResource PrimaryTextColor}"/>
        </Border>

        <Grid Grid.Column="1" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" CornerRadius="8" BorderThickness="1.5" 
                    BorderBrush="{StaticResource ButtonBrush}" Background="Transparent" Margin="5">

                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0"           
                                    Color="#4AC0E8"            
                                    BlurRadius="5"             
                                    Opacity="0.8"/>
                </Border.Effect>

                <TextBox x:Name="txtBox_Betrieb_Strasse" Text="Strasse" 
                         BorderThickness="0" Background="Transparent" Foreground="{StaticResource PrimaryTextColor}"/>
            </Border>

            <Border Grid.Column="1" CornerRadius="8" BorderThickness="1.5" 
                    BorderBrush="{StaticResource ButtonBrush}" Background="Transparent" Margin="5">

                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0"           
                    Color="#4AC0E8"            
                    BlurRadius="5"             
                    Opacity="0.8"/>
                </Border.Effect>

                <TextBox x:Name="txtBox_Betrieb_Nr_" Text="Nr." 
                         BorderThickness="0" Background="Transparent" Foreground="{StaticResource PrimaryTextColor}"/>
            </Border>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" CornerRadius="8" BorderThickness="1.5" 
                    BorderBrush="{StaticResource ButtonBrush}" Background="Transparent" Margin="5">

                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0"           
                    Color="#4AC0E8"            
                    BlurRadius="5"             
                    Opacity="0.8"/>
                </Border.Effect>

                <TextBox x:Name="txtBox_Betrieb_PLZ" Text="PLZ" 
                         BorderThickness="0" Background="Transparent" Foreground="{StaticResource PrimaryTextColor}"/>
            </Border>

            <Border Grid.Column="1" CornerRadius="8" BorderThickness="1.5" 
                    BorderBrush="{StaticResource ButtonBrush}" Background="Transparent" Margin="5">

                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0"           
                    Color="#4AC0E8"            
                    BlurRadius="5"             
                    Opacity="0.8"/>
                </Border.Effect>

                <TextBox x:Name="txtBox_Betrieb_Stadt" Text="Stadt" 
                         BorderThickness="0" Background="Transparent" Foreground="{StaticResource PrimaryTextColor}"/>
            </Border>
        </Grid>

        <Border Grid.Column="1" Grid.Row="4" CornerRadius="8" BorderThickness="1.5" 
                BorderBrush="{StaticResource ButtonBrush}" Background="Transparent" Margin="5">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="0"           
                    Color="#4AC0E8"            
                    BlurRadius="5"             
                    Opacity="0.8"/>
            </Border.Effect>

            <TextBox x:Name="txtBox_Betrieb_Ansprechpartner" Text="Ansprechpartner" 
                     BorderThickness="0" Background="Transparent" Foreground="{StaticResource PrimaryTextColor}"/>
        </Border>

        <Border Grid.Column="1" Grid.Row="5" CornerRadius="8" BorderThickness="1.5" 
                BorderBrush="{StaticResource ButtonBrush}" Background="Transparent" Margin="5">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="0"           
                    Color="#4AC0E8"            
                    BlurRadius="5"             
                    Opacity="0.8"/>
            </Border.Effect>

            <TextBox x:Name="txtBox_Betrieb_Email" Text="Email" 
                     BorderThickness="0" Background="Transparent" Foreground="{StaticResource PrimaryTextColor}"/>
        </Border>

        <Border Grid.Column="1" Grid.Row="6" CornerRadius="8" BorderThickness="1.5" 
                BorderBrush="{StaticResource ButtonBrush}" Background="Transparent" Margin="5">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="0"           
                    Color="#4AC0E8"            
                    BlurRadius="5"             
                    Opacity="0.8"/>
            </Border.Effect>

            <TextBox x:Name="txtBox_Betrieb_Telefonnummer" Text="Telefonnummer" 
                     BorderThickness="0" Background="Transparent" Foreground="{StaticResource PrimaryTextColor}"/>
        </Border>

        <Grid Grid.Column="1" Grid.Row="7" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btn_Betrieb_OK" Grid.Column="1" Content="OK"/>
            <Button x:Name="btn_Betrieb_Abbrechen" Grid.Column="2" Content="Abbrechen"/>
        </Grid>
    </Grid>
</Page>