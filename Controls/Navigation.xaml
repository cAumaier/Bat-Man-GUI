<UserControl x:Class="BAT_Man.Controls.Navigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BAT_Man.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="180">

    <Grid Grid.Column="0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="5,10">
            <Button x:Name="btn_nav_betriebEingeben" Content="Betrieb eingeben" Width="150" Height="30" Margin="5" Click="btn_nav_betriebEingeben_Click"/>
            <Button x:Name="btn_nav_betriebAnsehen" Content="Betrieb ansehen" Width="150" Height="30" Margin="5"/>
            <Button x:Name="btn_nav_uebersicht" Content="Übersicht" Width="150" Height="30" Margin="5"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="5,10">
            <Button x:Name="btn_nav_darkmode" Content="Darkmode On/Off" Width="150" Height="30" Margin="5"/>
            <Button x:Name="btn_nav_logout" Content="Logout" Width="150" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
