<Window x:Class="BAT_Man.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BAT_Man"
        mc:Ignorable="d"
        Title="BAT-Man" Height="350" Width="280"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Login" HorizontalAlignment="Center" FontSize="40" Margin="0,-15,0,20"/>
            <StackPanel>
                <TextBox Text="Benutzername" x:Name="txtBox_Benutzername" Width="200" Margin="5"/>
                <TextBox Text="Password" x:Name="txtBox_Password" Width="200" Margin="5"/>
                <Button x:Name="btn_Anmelden" Content="Anmelden" Width="100" Margin="5" HorizontalAlignment="Center" Click="btn_Anmelden_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
