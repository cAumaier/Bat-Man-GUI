<Window x:Class="BAT_Man.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BAT_Man"
        mc:Ignorable="d"
        Background="{StaticResource PrimaryBackgroundColor}"
        Title="BAT-Man" Height="350" Width="280"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Login" HorizontalAlignment="Center" FontSize="40" Margin="0,-15,0,20"/>
            <StackPanel>
                <Border CornerRadius="8" BorderThickness="1.5" 
                        BorderBrush="{StaticResource ButtonBrush}" Background="Transparent" Margin="5">

                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0"           
                                        Color="#4AC0E8"            
                                        BlurRadius="5"             
                                        Opacity="0.8"/>
                    </Border.Effect>

                    <TextBox x:Name="txtBox_Nutzername" Text="Nutzername" 
                            BorderThickness="0" Width="180" Background="Transparent" Foreground="{StaticResource PrimaryTextColor}"/>
                </Border>
                
                <Border CornerRadius="8" BorderThickness="1.5" 
                        BorderBrush="{StaticResource ButtonBrush}" Background="Transparent" Margin="5">

                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0"           
                        Color="#4AC0E8"            
                        BlurRadius="5"             
                        Opacity="0.8"/>
                    </Border.Effect>

                    <TextBox x:Name="txtBox_Password" Text="Password" 
                            BorderThickness="0" Background="Transparent" Foreground="{StaticResource PrimaryTextColor}"/>
                </Border>


                <Button x:Name="btn_Anmelden" Content="Anmelden" Width="100" Margin="5" HorizontalAlignment="Center" Click="btn_Anmelden_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
